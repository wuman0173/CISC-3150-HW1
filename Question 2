//Currently, there is no quit option, just a crash which ends the program if entering anything other than a double.

import java.math.*;
import java.util.*;

public class question2
{
	public static void main(String[] args)
	{
		System.out.println("Enter Radius to find Area");
		Scanner radiusScanner = new Scanner(System.in);
		while (radiusScanner.hasNext()){
			double radius = radiusScanner.nextDouble();
			double result = Math.PI*(Math.pow(radius,2.0));
			System.out.println("Radius Entered: " + radius);
			System.out.println("Area is: " + result);
			System.out.println("Enter Radius to find Area");
		}
	}
}
